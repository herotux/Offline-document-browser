<Window x:Class="PdfExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF Explorer" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar TreeView -->
        <TreeView x:Name="FolderTree" SelectedItemChanged="FolderTree_SelectedItemChanged"
                  Grid.Column="0" Margin="5"/>

        <!-- PDF Viewer -->
        <WebBrowser x:Name="PdfViewer" Grid.Column="1" Margin="5"/>
    </Grid>
</Window>
