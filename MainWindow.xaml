<ui:FluentWindow x:Class="SanadBan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="SanadBan" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Folder..." Click="OpenFolder_Click" />
                <Separator />
                <MenuItem Header="E_xit" Click="Exit_Click" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="About_Click" />
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar TreeView -->
            <TreeView x:Name="FolderTree" SelectedItemChanged="FolderTree_SelectedItemChanged"
                      Grid.Column="0" Margin="5"/>

            <!-- PDF Viewer -->
            <WebBrowser x:Name="PdfViewer" Grid.Column="1" Margin="5"/>
        </Grid>
    </DockPanel>
</ui:FluentWindow>
